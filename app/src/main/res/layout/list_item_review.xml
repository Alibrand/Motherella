<?xml version="1.0" encoding="utf-8"?>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layoutDirection="rtl"
        android:background="@drawable/bg_round_rating"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_doctor_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:hint="اسم الدكتور"
                android:padding="3dp"
                android:inputType="text"
                android:textSize="15sp"

                />
            <RatingBar
                android:id="@+id/rbar_rating"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:foregroundGravity="left"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:theme="@style/RatingBar"
                android:numStars="4"
                android:max="4"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>






<androidx.appcompat.widget.LinearLayoutCompat

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_doctor_sp"
        android:layout_width="250dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:textSize="15sp"
        android:inputType="text"
        android:layout_gravity="right"

        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:hint="الاختصاص"
        />
    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_gravity="left"
        android:visibility="gone"
        android:background="@drawable/ic_baseline_delete_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/txt_review_comment"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:textSize="15sp"
            android:hint="التعليق"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
             />

    </androidx.appcompat.widget.LinearLayoutCompat>
