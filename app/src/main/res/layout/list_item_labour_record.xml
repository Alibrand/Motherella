<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_marginBottom="15dp"
     android:padding="15dp"
    android:background="@drawable/bg_btn_round_corners"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.5"
            android:layout_gravity="right"
            android:id="@+id/txt_labour_date"
            android:textColor="@color/white"
            android:text="12-7-2021"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="كاذب"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:id="@+id/txt_labour_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:text="الانقباضات - الراحة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:text="ertwertwertgdfdfgdfg"
        android:id="@+id/txt_labour_contractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.appcompat.widget.LinearLayoutCompat>