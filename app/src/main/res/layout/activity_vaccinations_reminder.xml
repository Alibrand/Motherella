<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@color/background_color"
    tools:context=".VaccinationsReminderActivity">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logosq"
                android:layout_centerInParent="true"
                />
            <ImageButton
                android:background="@drawable/ic_baseline_home_24"
                android:layout_margin="15dp"
                android:id="@+id/btn_home"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </RelativeLayout><TextView
            android:id="@+id/main_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:text="تذكير ومتابعة التطعيمات والفحوصات"
            android:textSize="22sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:backgroundTint="@color/gray_overlay"

            android:background="@drawable/bg_btn_round_corners"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
         <TextView
             android:id="@+id/txt_result"
             android:text=""
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
            <TextView
                 android:textAlignment="center"
                android:textColor="@color/red"
                android:text="تنبيه: يجب عدم اتباع المكملات الغذائية والتطعيمات إلا بعد استشارة الطبيب المختص أو ضمن الجرعات المحددة"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_marginVertical="15dp"
            android:padding="13dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_round_corners"
            android:text="الثلث الاول"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/chbx_folic_acid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مكملات غذائية - حمض الفوليك"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/chbx_vitamin_b12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مكملات غذائية - فيتامين B12"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/chbx_ultrasonic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="فحص الموجات فوق الصوتية المبكرة"
            android:textSize="17sp" />
        <TextView
            android:layout_marginVertical="15dp"
            android:padding="13dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_round_corners"
            android:text="الثلث الثاني"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/chbx_ultrasonic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="فحص الموجات فوق الصوتية"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/chbx_gluocose_test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختبار السكر للحمل"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/chbx_supplements2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مكملات غذائية"
            android:textSize="17sp" />

        <TextView
            android:layout_marginVertical="15dp"
            android:padding="13dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_round_corners"
            android:text="الثلث الأخير ومابعد الولادة"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <CheckBox
            android:id="@+id/chbx_gluocose_test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختبار السكر للحمل"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/chbx_supplements3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مكملات غذائية"
            android:textSize="17sp" />
        <CheckBox
            android:id="@+id/chbx_vaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="لقاح الأنفلونزا - بعد الولادة"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:text="حفظ"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_round_corners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>